{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": [
            "esnext",
            "es6"
        ],
        "types": ["reflect-metadata"],
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true
    },
    "include": [
        "src/**/*.ts"
    ]
}